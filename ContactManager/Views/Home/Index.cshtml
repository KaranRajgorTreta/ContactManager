@{
    ViewData["Title"] = "Home Page";
}
<style>
    td{
        cursor:pointer;
    }
</style>

<div class="container">
    <input type="hidden" id="hdnId" value="" />
    <div class="row">
        <div class="col-md-12 row">
            <div class="col-md-6">
                <h3>Contacts</h3>
            </div>
            <div class="col-md-6">
                <button type="button" id="btnNew" data-bs-toggle="modal" data-bs-target="#contactInformation" class="btn btn-md btn-primary">Add New</button>
            </div>
        </div>
        <div class="col-md-12">
            <input type="text" class="form-control" id="txtSearch" placeholder="Search here.">
        </div>
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>                        
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody id="contactTableBody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="contactInformation" tabindex="-1" aria-labelledby="contactInformationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Contact Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="txtName" class="col-form-label">Name</label>
                        <input type="text" class="form-control" id="txtName">
                    </div>
                    <div class="mb-3">
                        <label for="txtEmail" class="col-form-label">Email</label>
                        <input type="email" class="form-control" id="txtEmail">
                    </div>
                    <div class="mb-3">
                        <label for="txtPhone" class="col-form-label">Phone</label>                        
                        <input type="text" class="form-control" id="txtPhone">
                    </div>
                    <div class="mb-3">
                        <label for="txtAddress" class="col-form-label">Address</label>
                        <textarea class="form-control" rows="5" id="txtAddress"></textarea>
                    </div>
                    <div class="mb-3">
                        <div id="map" class="col-md-12">
                            <iframe class="col-md-12" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13350.26029915729!2d-73.70123130488382!3d40.74584009497595!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c26289b21193ab%3A0x74036019c4dc6988!2sStop%20%26%20Shop!5e1!3m2!1sen!2sin!4v1719473864796!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="btnSave">Save changes</button>
                <button type="button" class="btn btn-danger" style="display:none" id="deleteContact">Delete Contact</button>
            </div>
        </div>
    </div>
</div>
