@{
    ViewData["Title"] = "Home Page";
}
<style>
    td{
        cursor:pointer;
    }
</style>

<div class="container">
    <input type="hidden" id="hdnId" value="" />
    <div class="row">
        <div class="col-md-12 row">
            <div class="col-md-6">
                <h3>Contacts</h3>
            </div>
            <div class="col-md-6">
                <button type="button" id="btnNew" data-bs-toggle="modal" data-bs-target="#contactInformation" class="btn btn-md btn-primary">Add New</button>
            </div>
        </div>
        <div class="col-md-12">
            <input type="text" class="form-control" id="txtSearch" placeholder="Search here.">
        </div>
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>                        
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody id="contactTableBody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="contactInformation" tabindex="-1" aria-labelledby="contactInformationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Contact Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="txtName" class="col-form-label">Name</label>
                        <input type="text" class="form-control" id="txtName">
                    </div>
                    <div class="mb-3">
                        <label for="txtEmail" class="col-form-label">Email</label>
                        <input type="email" class="form-control" id="txtEmail">
                    </div>
                    <div class="mb-3">
                        <label for="txtPhone" class="col-form-label">Phone</label>                        
                        <input type="text" class="form-control" id="txtPhone">
                    </div>
                    <div class="mb-3">
                        <label for="txtAddress" class="col-form-label">Address</label>
                        <textarea class="form-control" rows="5" id="txtAddress"></textarea>
                    </div>
                    <div class="mb-3">
                        <div id="map"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="btnSave">Save changes</button>
                <button type="button" class="btn btn-danger" style="display:none" id="deleteContact">Delete Contact</button>
            </div>
        </div>
    </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAvcDy5ZYc2ujCS6TTtI3RYX5QmuoV8Ffw&callback=initMap" async defer></script>
<script src="~/js/googlemap.js"></script>
<script src="~/js/contact.js"></script>